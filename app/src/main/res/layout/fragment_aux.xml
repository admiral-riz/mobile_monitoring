<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="14dp"
    android:background="#F2F4F7"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ======== TOP ACTION BAR ======== -->
    <LinearLayout
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:padding="12dp"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:clipToPadding="false">

        <TextView
            android:id="@+id/tvSelectedDate"
            android:text="2025-11-13"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1E1E1E"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnPilihTanggal"
            android:text="Pilih Tanggal"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/text_primary"
            android:elevation="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnFilter"
            android:text="Filter"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/primary"
            android:elevation="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- ======== TITLE ======== -->
    <TextView
        android:id="@+id/tvTitleAux"
        android:text="Top 10 AUX Tertinggi"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#222222"
        android:paddingBottom="10dp"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- ======== TABLE CONTAINER ======== -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="14dp"
        app:cardElevation="5dp"
        android:backgroundTint="@android:color/white">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:padding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <!-- ======== HEADER TABLE MODERN ======== -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:background="#E3E7ED"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="#"
                        android:textStyle="bold"
                        android:layout_width="50dp"
                        android:gravity="center"
                        android:textColor="#1E1E1E"
                        android:textSize="13sp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Agent"
                        android:textStyle="bold"
                        android:layout_width="190dp"
                        android:textColor="#1E1E1E"
                        android:textSize="13sp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Site"
                        android:textStyle="bold"
                        android:layout_width="80dp"
                        android:gravity="center"
                        android:textColor="#1E1E1E"
                        android:textSize="13sp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Ist1"
                        android:textStyle="bold"
                        android:layout_width="80dp"
                        android:gravity="center"
                        android:textColor="#1E1E1E"
                        android:textSize="13sp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Ist2"
                        android:textStyle="bold"
                        android:layout_width="80dp"
                        android:gravity="center"
                        android:textColor="#1E1E1E"
                        android:textSize="13sp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Ist3"
                        android:textStyle="bold"
                        android:layout_width="80dp"
                        android:gravity="center"
                        android:textColor="#1E1E1E"
                        android:textSize="13sp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Toilet"
                        android:textStyle="bold"
                        android:layout_width="80dp"
                        android:gravity="center"
                        android:textColor="#1E1E1E"
                        android:textSize="13sp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Ibadah"
                        android:textStyle="bold"
                        android:layout_width="80dp"
                        android:gravity="center"
                        android:textColor="#1E1E1E"
                        android:textSize="13sp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Total"
                        android:textStyle="bold"
                        android:layout_width="80dp"
                        android:gravity="center"
                        android:textColor="#1E1E1E"
                        android:textSize="13sp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Status"
                        android:textStyle="bold"
                        android:layout_width="100dp"
                        android:gravity="center"
                        android:textColor="#1E1E1E"
                        android:textSize="13sp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Aksi"
                        android:textStyle="bold"
                        android:layout_width="100dp"
                        android:gravity="center"
                        android:textColor="#1E1E1E"
                        android:textSize="13sp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- ======== RECYCLER VIEW FOR DATA ======== -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerAux"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp" />

            </LinearLayout>
        </HorizontalScrollView>
    </androidx.cardview.widget.CardView>

</LinearLayout>
