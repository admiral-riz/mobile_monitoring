<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#F5F6FA"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ======== Bar Atas (Tanggal + Tombol) ======== -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/tvSelectedDate"
            android:text="Tanggal: 13 November 2025"
            android:textSize="16sp"
            android:textColor="#212121"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnPilihTanggal"
            android:text="Pilih Tanggal"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/text_primary"
            android:elevation="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnFilter"
            android:text="Filter"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/primary"
            android:elevation="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- ======== Judul ======== -->
    <TextView
        android:id="@+id/tvTitleAux"
        android:text="⚠️ Top 10 Agent dengan AUX Tertinggi"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#333333"
        android:paddingTop="8dp"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- ======== Wrapper Scroll Horizontal ======== -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="6dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="3dp"
        android:backgroundTint="@android:color/white">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <!-- ======== Header Tabel ======== -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:background="#ECEFF1"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="2dp">

                    <TextView android:text="No" android:textStyle="bold"
                        android:layout_width="50dp" android:gravity="center"
                        android:textColor="#000000" android:layout_height="wrap_content" />

                    <TextView android:text="Agent" android:textStyle="bold"
                        android:layout_width="200dp" android:textColor="#000000"
                        android:layout_height="wrap_content" />

                    <TextView android:text="Site" android:textStyle="bold"
                        android:layout_width="80dp" android:gravity="center"
                        android:textColor="#000000" android:layout_height="wrap_content" />

                    <TextView android:text="Istirahat 1" android:textStyle="bold"
                        android:layout_width="100dp" android:gravity="center"
                        android:textColor="#000000" android:layout_height="wrap_content" />

                    <TextView android:text="Istirahat 2" android:textStyle="bold"
                        android:layout_width="100dp" android:gravity="center"
                        android:textColor="#000000" android:layout_height="wrap_content" />

                    <TextView android:text="Istirahat 3" android:textStyle="bold"
                        android:layout_width="100dp" android:gravity="center"
                        android:textColor="#000000" android:layout_height="wrap_content" />

                    <TextView android:text="Toilet" android:textStyle="bold"
                        android:layout_width="80dp" android:gravity="center"
                        android:textColor="#000000" android:layout_height="wrap_content" />

                    <TextView android:text="Ibadah" android:textStyle="bold"
                        android:layout_width="80dp" android:gravity="center"
                        android:textColor="#000000" android:layout_height="wrap_content" />

                    <TextView android:text="Total" android:textStyle="bold"
                        android:layout_width="80dp" android:gravity="center"
                        android:textColor="#000000" android:layout_height="wrap_content" />

                    <TextView android:text="Status" android:textStyle="bold"
                        android:layout_width="100dp" android:gravity="center"
                        android:textColor="#000000" android:layout_height="wrap_content" />

                    <TextView android:text="Aksi" android:textStyle="bold"
                        android:layout_width="100dp" android:gravity="center"
                        android:textColor="#000000" android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- ======== Isi Data Recycler ======== -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerAux"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:divider="#BDBDBD"
                    android:dividerHeight="1dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="6dp" />
            </LinearLayout>
        </HorizontalScrollView>
    </androidx.cardview.widget.CardView>

</LinearLayout>
