<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- ===== KIP Section ===== -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KIP Dashboard"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="8dp"/>

        <!-- Tombol pilih tanggal KIP -->
        <Button
            android:id="@+id/btnSelectDateKip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Tanggal KIP"
            android:layout_marginBottom="8dp"/>

        <!-- PieChart Fixed -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PieChart Fixed per Channel"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"/>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChartFixed"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/textFixedInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <!-- PieChart Mobile -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PieChart Mobile per Channel"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"/>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChartMobile"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/textMobileInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <!-- ===== AUX Section ===== -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AUX Dashboard"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"/>

        <!-- Tombol pilih tanggal AUX -->
        <Button
            android:id="@+id/btnSelectDateAux"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Tanggal AUX"
            android:layout_marginBottom="8dp"/>

        <!-- BarChart AUX -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BarChart AUX per Status"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"/>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChartAux"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/textAuxInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</ScrollView>
