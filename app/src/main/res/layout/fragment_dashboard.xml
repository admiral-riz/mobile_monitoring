<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- GUIDE USER BARU -->
        <TextView
            android:id="@+id/textGuide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ‘‹ Selamat datang!\n1. Pilih tanggal\n2. Lihat performa channel\n3. Scroll ke bawah untuk melihat AUX Agent"
            android:textSize="14sp"
            android:textColor="#2E7D32"
            android:background="#E8F5E9"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <!-- KIP SECTION -->
        <TextView
            android:text="KIP Dashboard"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnSelectDateKip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“… Pilih Tanggal KIP"/>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChartFixed"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>

        <TextView
            android:id="@+id/textFixedInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChartMobile"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>

        <TextView
            android:id="@+id/textMobileInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- AUX SECTION -->
        <TextView
            android:text="AUX Dashboard"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnSelectDateAux"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“… Pilih Tanggal AUX"/>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChartAux"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>

        <TextView
            android:id="@+id/textAuxInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>
