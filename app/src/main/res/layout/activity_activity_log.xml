<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F9"
    android:padding="16dp">

    <!-- HEADER MODERN -->
    <LinearLayout
        android:id="@+id/headerBar"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btnBackToProfile"
            android:padding="8dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"
             />

        <TextView
            android:text="Activity Log"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!-- CARD FILTER MODERN -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardFilter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:backgroundTint="#FFFFFF"
        app:cardCornerRadius="18dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/headerBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Spinner
                android:id="@+id/spinnerActivity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFilter"
                android:text="Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                app:cornerRadius="20dp"
                app:backgroundTint="@color/teal_700"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- DELETE OLD LOGS -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDeleteOldLogs"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:text="Hapus Log Lama"
        android:textAllCaps="false"
        app:cornerRadius="20dp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/cardFilter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- LIST VIEW -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerActivityLog"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnDeleteOldLogs"
        app:layout_constraintBottom_toTopOf="@id/paginationLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- PAGINATION MODERN -->
    <LinearLayout
        android:id="@+id/paginationLayout"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btnPrev"
            android:text="Previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtPage"
            android:text="1 / 1"
            android:padding="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnNext"
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
